<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.3.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_3_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.3.0+</version>
	</compatibility>
	<theme id="anidia" name="Anidia">
		<template-extension>ftl</template-extension>
		<portlet-decorator id="barebone" name="Barebone">
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
		<settings>
			<setting configurable="true" key="Teléfono de Call Center" type="text" value="900922203" />
			<setting configurable="true" key="GTM-ID" type="text" value="GTM-XXXXXXX" />
			<setting configurable="true" key="Versión de Call Center en móvil" options="icono,icono + texto" type="select" value="icono" />
			<setting configurable="true" key="Esquema de colores de fondo de la página" options="verde,blanco,blanco con imagen,verde claro" type="select" value="verde" />
      <setting configurable="true" key="Esquema de colores de cabecera" options="verde,blanco" type="select" value="verde" />
			<setting configurable="true" key="Entorno OneTrust" options="test,produccion" type="select" value="test" />
		</settings>
	</theme>
</look-and-feel>
